@{
    ViewData["Title"] = SharedResource.homePage + " || TableTap";
}

<style>
    @@keyframes gradientMove {
        0%

    {
        background-position: 0% 50%;
    }

    50% {
        background-position: 100% 50%;
    }

    100% {
        background-position: 0% 50%;
    }

    }

    .hero-bg {
        background: linear-gradient(45deg, #4c6ef5, #a855f7);
        background-size: 400% 400%;
        animation: gradientMove 10s ease infinite;
    }
    @@keyframes circleMove {
        0%

    {
        opacity: 0;
        transform: scale(0.5);
    }

    50% {
        opacity: 1;
        transform: scale(1.5);
    }

    100% {
        opacity: 0;
        transform: scale(0.5);
    }

    }

    .circle {
        position: absolute;
        width: 150px;
        height: 150px;
        border-radius: 50%;
        background-color: rgba(255, 255, 255, 0.3);
        animation: circleMove 6s ease infinite;
    }


</style>
<body class="font-sans text-[#2D3748] bg-white">
    <!-- Navbar -->
    <nav class="fixed w-full z-50 bg-indigo-800 text-white shadow-lg">
        <div class="container mx-auto px-6 py-2.5 flex justify-between items-center">
            <div class="flex items-center gap-3">
                <img src="../images/logo/main.png" alt="TableTap logo" class="w-16 h-16" />
                <span class="text-2xl font-bold text-white">TableTap</span>
            </div>
            <div class="hidden md:flex space-x-6 rtl:space-x-reverse items-center">
                <a href="#features" class="text-white hover:text-indigo-300 transition duration-300">@SharedResource.Nav_Features</a>
                <a href="#how" class="text-white hover:text-indigo-300 transition duration-300">@SharedResource.Nav_HowItWorks</a>
                <a href="#faq" class="text-white hover:text-indigo-300 transition duration-300">@SharedResource.Nav_FAQ</a>
                <a href="#stats" class="text-white hover:text-indigo-300 transition duration-300">@SharedResource.Nav_Stats</a>
                <a href="#contact" class="text-white hover:text-indigo-300 transition duration-300">@SharedResource.Nav_Contact</a>
                <a href="#" class="ml-4 px-6 py-3 bg-white text-indigo-800 font-bold rounded-full shadow-lg hover:bg-indigo-50 transition transform hover:scale-105">@SharedResource.GetStarted</a>
                <div class="relative">
                    <button class="px-4 py-2 bg-white text-indigo-600 border border-indigo-600 rounded hover:bg-indigo-50 dropdown-toggle"
                            id="languageDropdown" type="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        @(CultureInfo.CurrentUICulture.Name.StartsWith("ar") ? "العربية" : "English")
                    </button>
                    <div class="dropdown-menu dropdown-menu-end py-0" aria-labelledby="languageDropdown">
                        <a class="dropdown-item"
                           asp-controller="Language"
                           asp-action="ChangeLanguage"
                           asp-route-lang="en">
                            English
                        </a>
                        <a class="dropdown-item"
                           asp-controller="Language"
                           asp-action="ChangeLanguage"
                           asp-route-lang="ar">
                            العربية
                        </a>
                    </div>
                </div>
            </div>
            <div class="md:hidden">
                <button @@click="mobileMenuOpen = !mobileMenuOpen">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </button>
            </div>
        </div>
        <div x-show="mobileMenuOpen" class="md:hidden px-6 pb-4 bg-indigo-800 text-white">
            <a href="#features" class="block py-2 hover:text-indigo-300 transition duration-300">@SharedResource.Nav_Features</a>
            <a href="#how" class="block py-2 hover:text-indigo-300 transition duration-300">@SharedResource.Nav_HowItWorks</a>
            <a href="#faq" class="block py-2 hover:text-indigo-300 transition duration-300">@SharedResource.Nav_FAQ</a>
            <a href="#stats" class="block py-2 hover:text-indigo-300 transition duration-300">@SharedResource.Nav_Stats</a>
            <a href="#contact" class="block py-2 hover:text-indigo-300 transition duration-300">@SharedResource.Nav_Contact</a>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="h-screen flex items-center justify-center hero-bg text-white text-center relative overflow-hidden">
        <div class="max-w-3xl z-10">
            <img src="../images/logo/main.png" alt="Logo" class="w-72 h-72 mx-auto mb-6 transition-transform transform hover:scale-110" />
            <h1 class="text-5xl font-extrabold mb-4" data-aos="fade-up">@SharedResource.Hero_Title</h1>
            <p class="text-lg font-medium mb-6" data-aos="fade-up" data-aos-delay="300">@SharedResource.Hero_Subtitle</p>
            <a href="#features" class="inline-block px-6 py-3 bg-white text-indigo-600 font-bold rounded-full shadow-lg hover:bg-indigo-50 transition-transform duration-300 transform hover:scale-105">@SharedResource.GetStarted</a>
        </div>
    </section>

    <!-- Animated Section -->
    <section class="py-20 bg-white">
        <div class="container mx-auto px-6 text-center">
            <h2 class="text-4xl font-bold mb-6">
                <span id="typewriter" class="inline-block whitespace-nowrap border-r-2 border-indigo-600 pr-1"></span>
            </h2>
            <div class="space-y-4 max-w-2xl mx-auto">
                <p class="text-lg" data-aos="fade-up" data-aos-delay="100">@SharedResource.establishmentDigitalFuture</p>
                <p class="text-lg" data-aos="fade-up" data-aos-delay="200">@SharedResource.easyFast</p>
                <p class="text-lg" data-aos="fade-up" data-aos-delay="300">@SharedResource.secureWithoutApp</p>
            </div>
        </div>
    </section>

    <!-- Features -->
    <section id="features" class="py-20 bg-gray-100">
        <div class="container mx-auto px-6 text-center">
            <h2 class="text-4xl font-extrabold text-gray-800 mb-12">@SharedResource.TableTapFeatures</h2>
            <div class="grid md:grid-cols-3 gap-8">
                <div class="p-6 bg-white border border-gray-400 rounded-xl shadow-2xl hover:shadow-3xl transition-shadow duration-300 ease-in-out transform hover:scale-105">
                    <h3 class="text-xl font-semibold mb-3 text-gray-800">@SharedResource.EaseAccess</h3>
                    <p class="text-gray-600">@SharedResource.customersAccessQR</p>
                </div>
                <div class="p-6 bg-white border border-gray-400 rounded-xl shadow-2xl hover:shadow-3xl transition-shadow duration-300 ease-in-out transform hover:scale-105">
                    <h3 class="text-xl font-semibold mb-3 text-gray-800">@SharedResource.environmentalProtection</h3>
                    <p class="text-gray-600">@SharedResource.reducePaperUsage</p>
                </div>
                <div class="p-6 bg-white border border-gray-400 rounded-xl shadow-2xl hover:shadow-3xl transition-shadow duration-300 ease-in-out transform hover:scale-105">
                    <h3 class="text-xl font-semibold mb-3 text-gray-800">@SharedResource.costSavings</h3>
                    <p class="text-gray-600">@SharedResource.sayGoodbye</p>
                </div>
            </div>
        </div>
    </section>


    <!-- How It Works -->
    <section id="how" class="py-20 bg-gray-50">
        <div class="container mx-auto px-6">
            <h2 class="text-4xl font-bold text-center mb-12" data-aos="fade-up">@SharedResource.howTableTapWork</h2>
            <div class="space-y-6">
                <div class="bg-white border border-gray-400 shadow-2xl p-6 rounded-xl hover:shadow-3xl transition-shadow duration-300 ease-in-out" data-aos="fade-up" data-aos-delay="100">
                    <h3 class="text-xl font-semibold mb-3 text-gray-800">1. @SharedResource.registration</h3>
                    <p class="text-gray-600">@SharedResource.registerYourEstablishment</p>
                </div>
                <div class="bg-white border border-gray-400 shadow-2xl p-6 rounded-xl hover:shadow-3xl transition-shadow duration-300 ease-in-out" data-aos="fade-up" data-aos-delay="200">
                    <h3 class="text-xl font-semibold mb-3 text-gray-800">2. @SharedResource.createQR</h3>
                    <p class="text-gray-600">@SharedResource.getQR</p>
                </div>
                <div class="bg-white border border-gray-400 shadow-2xl p-6 rounded-xl hover:shadow-3xl transition-shadow duration-300 ease-in-out" data-aos="fade-up" data-aos-delay="300">
                    <h3 class="text-xl font-semibold mb-3 text-gray-800">3. @SharedResource.accessToMenu</h3>
                    <p class="text-gray-600">@SharedResource.customersUsePhones</p>
                </div>
            </div>
        </div>
    </section>


    <!-- Stats Section -->
    <section id="stats" class="py-20">
        <div class="container mx-auto px-6 text-center">
            <h2 class="text-4xl font-bold mb-12" data-aos="fade-up">@SharedResource.tableTapNumbers</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <div class="bg-white shadow p-6 rounded-lg" data-aos="fade-up" data-aos-delay="100">
                    <h3 class="text-3xl font-bold text-indigo-600">+150</h3>
                    <p class="mt-2">@SharedResource.registeredEstablishment</p>
                </div>
                <div class="bg-white shadow p-6 rounded-lg" data-aos="fade-up" data-aos-delay="200">
                    <h3 class="text-3xl font-bold text-indigo-600">+30K</h3>
                    <p class="mt-2">@SharedResource.monthlyVisit</p>
                </div>
                <div class="bg-white shadow p-6 rounded-lg" data-aos="fade-up" data-aos-delay="300">
                    <h3 class="text-3xl font-bold text-indigo-600">+99%</h3>
                    <p class="mt-2">@SharedResource.customerSatisfaction</p>
                </div>
            </div>
        </div>
    </section>

    <!-- FAQ -->
    <section id="faq" class="py-20">
        <div class="container mx-auto px-6">
            <h2 class="text-4xl font-bold text-center mb-12" data-aos="fade-up">@SharedResource.Nav_FAQ</h2>
            <div class="space-y-4" x-data="{ selected: null }">
                <template x-for="(faq, index) in [
        { q: '@SharedResource.tableTapFree', a: '@SharedResource.basicServiceAtSmallPrice' },
        { q: '@SharedResource.specialApp', a: '@SharedResource.clientUseBrowser' },
        { q: '@SharedResource.easilyCustomized', a: '@SharedResource.youCanEdit' }
      ]" :key="index">
                    <div class="border border-gray-300 rounded-lg p-4 cursor-pointer shadow-md hover:shadow-xl transition-shadow duration-300 ease-in-out" @@click="selected !== index ? selected = index : selected = null">
                        <h3 class="text-lg font-semibold flex justify-between items-center text-gray-800" x-text="faq.q">
                            <span :class="selected === index ? 'rotate-180' : ''" class="transition-transform">⌄</span>
                        </h3>
                        <div x-show="selected === index" class="mt-2 text-gray-600" x-text="faq.a"></div>
                    </div>
                </template>
            </div>
        </div>
    </section>


    <!-- Contact Section -->
    <section id="contact" class="py-20 bg-gray-100">
        <div class="container mx-auto px-6 text-center">
            <h2 class="text-4xl font-bold mb-6" data-aos="fade-up" data-aos-duration="500">@SharedResource.contactUs</h2>
            <p class="text-lg text-gray-700">@SharedResource.emailUs</p>
            <p class="text-xl font-semibold mt-2 text-indigo-700">support@tabletap.com</p>
        </div>
    </section>

    <script>
        document.addEventListener('alpine:init', () => {
          Alpine.data('accordion', () => ({ selected: null }));
        });
    </script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
        const text = @Html.Raw(Json.Serialize(SharedResource.whyChoose));
        let i = 0;
        const speed = 100;
        const target = document.getElementById("typewriter");

        function typeWriter() {
            if (i < text.length) {
            target.textContent += text.charAt(i);
            i++;
            setTimeout(typeWriter, speed);
            }
        }

        typeWriter();
        });
    </script>
</body>



