@{
    ViewData["Title"] = "TableTap - Digital Menu Platform for Establishments";
}

<style>
    .feature-list li i {
        margin-inline-end: 0.4rem;
    }

</style>

<body>
    <div class="site-wrapper">

        @Html.Partial("_LandingHeader")

        <main>  
            <section class="hero">
                <div class="container">
                    <div class="hero-content">
                        <div class="hero-text">
                            <h1>@SharedResource.heroHeading</h1>
                            <p>@SharedResource.heroDescription</p>
                            <div class="hero-buttons">
                                <a href="signup.html" class="btn btn-primary btn-lg">@SharedResource.getStarted</a>
                                <a href="pricing.html" class="btn btn-outline btn-lg">@SharedResource.viewPricing</a>
                            </div>
                        </div>
                        <div class="hero-image">
                            <img src="~/images/bg/index-1.png" alt="TableTap dashboard preview">
                        </div>
                    </div>
                </div>
            </section>

            <section class="features">
                <div class="container">
                    <div class="section-header">
                        <h2>@SharedResource.featuresSectionHeading</h2>
                        <p>@SharedResource.featuresSectionDescription</p>
                    </div>
                    <div class="features-grid">
                        <div class="card">
                            <div class="card-header">
                                <i class="fas fa-qrcode feature-icon"></i>
                                <h3>@SharedResource.featureQrCodeHeading</h3>
                                <p>@SharedResource.featureQrCodeDescription</p>
                            </div>
                            <div class="card-content">
                                <ul class="feature-list">
                                    <li><i class="fas fa-check "></i>@SharedResource.featureQRCodeItem1</li>
                                    <li><i class="fas fa-check"></i>@SharedResource.featureQRCodeItem2</li>
                                    <li><i class="fas fa-check"></i>@SharedResource.featureQRCodeItem3</li>
                                </ul>
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-header">
                                <i class="fas fa-utensils feature-icon"></i>
                                <h3>@SharedResource.featureMenuManagementHeading</h3>
                                <p>@SharedResource.featureMenuManagementDescription</p>
                            </div>
                            <div class="card-content">
                                <ul class="feature-list">
                                    <li><i class="fas fa-check"></i> @SharedResource.featureMenuItem1</li>
                                    <li><i class="fas fa-check"></i> @SharedResource.featureMenuItem2</li>
                                </ul>
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-header">
                                <i class="fas fa-mobile-alt feature-icon"></i>
                                <h3>@SharedResource.featureMobileOptimizedHeading</h3>
                                <p>@SharedResource.featureMobileOptimizedDescription</p>
                            </div>
                            <div class="card-content">
                                <ul class="feature-list">
                                    <li><i class="fas fa-check"></i> @SharedResource.featureMobileItem1</li>
                                    <li><i class="fas fa-check"></i> @SharedResource.featureMobileItem2</li>
                                    <li><i class="fas fa-check"></i> @SharedResource.featureMobileItem3+
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <section class="pricing">
                <div class="container">
                    <div class="section-header">
                        <h2>@SharedResource.pricingSectionHeading</h2>
                        <p>@SharedResource.pricingSectionDescription</p>
                    </div>
                    <div class="pricing-grid">
                        <div class="card pricing-card">
                            <div class="card-header">
                                <h3>Starter</h3>
                                <div class="price">$29</div>
                                <p>per month</p>
                            </div>
                            <div class="card-content">
                                <ul class="feature-list">
                                    <li><i class="fas fa-check"></i> 1 establishment location</li>
                                    <li><i class="fas fa-check"></i> Up to 50 menu items</li>
                                    <li><i class="fas fa-check"></i> Basic analytics</li>
                                    <li><i class="fas fa-check"></i> Email support</li>
                                </ul>
                            </div>
                            <div class="card-footer">
                                <a href="signup.html" class="btn btn-primary btn-full">Get Started</a>
                            </div>
                        </div>
                        <div class="card pricing-card popular">
                            <div class="popular-tag">Popular</div>
                            <div class="card-header">
                                <h3>Professional</h3>
                                <div class="price">$79</div>
                                <p>per month</p>
                            </div>
                            <div class="card-content">
                                <ul class="feature-list">
                                    <li><i class="fas fa-check"></i> Up to 3 establishment locations</li>
                                    <li><i class="fas fa-check"></i> Unlimited menu items</li>
                                    <li><i class="fas fa-check"></i> Advanced analytics</li>
                                    <li><i class="fas fa-check"></i> Priority email support</li>
                                    <li><i class="fas fa-check"></i> Custom branding</li>
                                </ul>
                            </div>
                            <div class="card-footer">
                                <a href="signup.html" class="btn btn-primary btn-full">Get Started</a>
                            </div>
                        </div>
                        <div class="card pricing-card">
                            <div class="card-header">
                                <h3>Enterprise</h3>
                                <div class="price">$199</div>
                                <p>per month</p>
                            </div>
                            <div class="card-content">
                                <ul class="feature-list">
                                    <li><i class="fas fa-check"></i> Unlimited establishment locations</li>
                                    <li><i class="fas fa-check"></i> Unlimited menu items</li>
                                    <li><i class="fas fa-check"></i> Advanced analytics & reporting</li>
                                    <li><i class="fas fa-check"></i> 24/7 phone & email support</li>
                                    <li><i class="fas fa-check"></i> Custom development</li>
                                </ul>
                            </div>
                            <div class="card-footer">
                                <a href="contact.html" class="btn btn-primary btn-full">Contact Sales</a>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <section class="cta">
                <div class="container">
                    <div class="cta-content">
                        <h2>@SharedResource.ctaSectionHeading</h2>
                        <p>@SharedResource.ctaSectionDescription</p>
                        <div class="cta-buttons">
                            <a href="signup.html" class="btn btn-primary btn-lg">@SharedResource.getStarted</a>
                            <a href="contact.html" class="btn btn-outline btn-lg">@SharedResource.contactUs</a>
                        </div>
                    </div>
                </div>
            </section>
        </main>

        @Html.Partial("_LandingFooter")

    </div>

    <script>
        document.getElementById('current-year').textContent = new Date().getFullYear();

        const mobileMenuButton = document.querySelector('.mobile-menu-button');
        const mobileMenu = document.querySelector('.mobile-menu');

        mobileMenuButton.addEventListener('click', () => {
          mobileMenu.classList.toggle('active');
          if (mobileMenu.classList.contains('active')) {
            mobileMenuButton.innerHTML = '<i class="fas fa-times"></i>';
          } else {
            mobileMenuButton.innerHTML = '<i class="fas fa-bars"></i>';
          }
        });

        const themeToggle = document.querySelector('.theme-toggle');
        const prefersDarkScheme = window.matchMedia('(prefers-color-scheme: dark)');

        const currentTheme = localStorage.getItem('theme') || (prefersDarkScheme.matches ? 'dark' : 'light');

        if (currentTheme === 'dark') {
          document.body.classList.add('dark-theme');
        }

        themeToggle.addEventListener('click', () => {
          document.body.classList.toggle('dark-theme');
          const theme = document.body.classList.contains('dark-theme') ? 'dark' : 'light';
          localStorage.setItem('theme', theme);
        });
    </script>
</body>



