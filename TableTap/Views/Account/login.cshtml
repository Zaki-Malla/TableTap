@model LoginViewModel
@{
    ViewData["Title"] = SharedResource.Login + " || TableTap";
}
<style>
  
    @@keyframes gradientMove {

      0%   { background-position: 0% 50%; }
      50%  { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }

    }
    .hero-bg {
      background: linear-gradient(45deg, #4c6ef5, #a855f7);
      background-size: 400% 400%;
      animation: gradientMove 10s ease infinite;
    }
    @@keyframes circleMove {
      0%   { opacity: 0; transform: scale(0.5); }
      50%  { opacity: 1; transform: scale(1.5); }
      100% { opacity: 0; transform: scale(0.5); }
    }
    .circle {
      position: absolute;
      width: 150px;
      height: 150px;
      border-radius: 50%;
      background-color: rgba(255,255,255,0.3);
      animation: circleMove 6s ease infinite;
    }
</style>
<script src="https://cdn.tailwindcss.com"></script>
<script src="https://unpkg.com/alpinejs" defer></script>
<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<body class="font-sans text-[#2D3748] bg-white">
    <!-- Navbar -->
    <nav class="fixed w-full z-50 bg-indigo-800 text-white shadow-lg">
        <div class="container mx-auto px-6 py-2.5 flex justify-between items-center">
            <div class="flex items-center gap-3">
                <img src="~/images/logo/main.png" alt="TableTap logo" class="w-16 h-16" />
                <span class="text-2xl font-bold">TableTap</span>
            </div>
            <div class="hidden md:flex space-x-6 rtl:space-x-reverse items-center">
                <a href="#features" class="hover:text-indigo-300 transition">@SharedResource.Nav_Features</a>
                <a href="#how" class="hover:text-indigo-300 transition">@SharedResource.Nav_HowItWorks</a>
                <a href="#faq" class="hover:text-indigo-300 transition">@SharedResource.Nav_FAQ</a>
                <a href="#stats" class="hover:text-indigo-300 transition">@SharedResource.Nav_Stats</a>
                <a href="#contact" class="hover:text-indigo-300 transition">@SharedResource.Nav_Contact</a>
                <a href="#" class="ml-4 px-6 py-3 bg-white text-indigo-800 font-bold rounded-full shadow-lg hover:bg-indigo-50 transition transform hover:scale-105">
                    @SharedResource.GetStarted
                </a>
                <div class="relative">
                    <button class="px-4 py-2 bg-white text-indigo-600 border border-indigo-600 rounded hover:bg-indigo-50 dropdown-toggle"
                            id="languageDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        @(CultureInfo.CurrentUICulture.TwoLetterISOLanguageName == "ar" ? "العربية" : "English")
                    </button>
                    <div class="dropdown-menu dropdown-menu-end py-0" aria-labelledby="languageDropdown">
                        <a asp-controller="Language" asp-action="ChangeLanguage" asp-route-lang="en" class="dropdown-item">English</a>
                        <a asp-controller="Language" asp-action="ChangeLanguage" asp-route-lang="ar" class="dropdown-item">العربية</a>
                    </div>
                </div>
            </div>
            <div class="md:hidden">
                <button x-on:click="mobileMenuOpen = !mobileMenuOpen">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </button>
            </div>
        </div>
        <div x-show="mobileMenuOpen" class="md:hidden px-6 pb-4 bg-indigo-800 text-white">
            <a href="#features" class="block py-2 hover:text-indigo-300 transition">@SharedResource.Nav_Features</a>
            <a href="#how" class="block py-2 hover:text-indigo-300 transition">@SharedResource.Nav_HowItWorks</a>
            <a href="#faq" class="block py-2 hover:text-indigo-300 transition">@SharedResource.Nav_FAQ</a>
            <a href="#stats" class="block py-2 hover:text-indigo-300 transition">@SharedResource.Nav_Stats</a>
            <a href="#contact" class="block py-2 hover:text-indigo-300 transition">@SharedResource.Nav_Contact</a>
        </div>
    </nav>
    <!-- Hero + Login Form -->
    <section class="h-screen flex items-center justify-center hero-bg text-white text-center relative overflow-hidden">
        <div class="circle" style="top: 10%; left: -10%;"></div>
        <div class="circle" style="bottom: 10%; right: -5%;"></div>

        <div class="max-w-md w-full bg-white p-8 rounded-xl shadow-2xl hover:shadow-3xl transition-shadow duration-300 ease-in-out z-10">
            <h2 class="text-2xl font-bold text-indigo-800 mb-6">@SharedResource.LoginTitle</h2>
            <form asp-action="Login" method="post" class="space-y-4">
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger d-flex align-items-center" role="alert">
                        <span class="fas fa-exclamation-triangle me-2"></span>
                        <div>@Html.ValidationSummary(false, "", new { @class = "mb-0" })</div>
                    </div>
                }
                <div>
                    <label  class="block text-gray-700 mb-1">@SharedResource.EmailLabel</label>
                  
                    <input asp-for="Email" type="email"
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" placeholder="example@domain.com" required />
                </div>
                <div>
                    <label  class="block text-gray-700 mb-1">@SharedResource.PasswordLabel</label>
                    <input asp-for="Password" type="password"
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" />
                </div>
                <div class="flex flex-col md:flex-row items-center justify-between text-sm">
                    <label class="inline-flex items-center space-x-2">
                        
                        <span class="text-gray-600">@SharedResource.RememberMe</span>
                    </label>
                    <a asp-action="ForgotPassword" class="mt-2 md:mt-0 text-indigo-600 hover:underline">@SharedResource.ForgotPassword</a>
                </div>
                <button type="submit"
                        class="w-full px-6 py-3 bg-indigo-600 text-white font-bold rounded-full hover:bg-indigo-700 transition-transform duration-200 transform hover:scale-105">
                    @SharedResource.LoginButton
                </button>
            </form>
        </div>
    </section>
   

    <!-- include Alpine.js & AOS init if not already in layout -->
    <script src="https://unpkg.com/alpinejs" defer></script>
    <script>
        document.addEventListener('alpine:init', () => {
          Alpine.store('mobileMenuOpen', false)
        })
        AOS.init()
    </script>
</body>
