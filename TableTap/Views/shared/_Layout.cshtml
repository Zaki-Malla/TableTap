<!DOCTYPE html>
@using System.Globalization

<html lang="@CultureInfo.CurrentUICulture.TwoLetterISOLanguageName"
      dir="@(CultureInfo.CurrentUICulture.TextInfo.IsRightToLeft ? "rtl" : "ltr")"
      x-data="{ mobileMenuOpen: false }"
      x-init="AOS.init()"
      class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>@ViewBag.Title</title>
    
   @* STYLE CSS *@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

    <link href="../../../assets/css/styles.css" type="text/css" rel="stylesheet">
    <link href="../../../assets/css/styles-menu.css" type="text/css" rel="stylesheet">


</head>
<body>

    <div>
        @RenderBody()

    </div>


    <div class="main" id="top">
    </div>

    @*  JS  *@
    <script>
        (function() {
          var culture = '@CultureInfo.CurrentUICulture.Name';
          var isRTL = culture.toLowerCase().startsWith('ar');

          var htmlEl            = document.documentElement;

          if (isRTL) {
            htmlEl.setAttribute('dir', 'rtl');
          } else {
            htmlEl.setAttribute('dir', 'ltr');
          }

          var btn = document.getElementById('dropdownMenuButton');
          if (btn) {
            btn.textContent = isRTL ? 'العربية' : 'English';
          }
        })();
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/alpinejs" defer></script>
    <script href="../../../assets/js/menu.js"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
