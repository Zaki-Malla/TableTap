    @*  JS  *@
    <script>
        (function() {
          var culture = '@CultureInfo.CurrentUICulture.Name';
          var isRTL = culture.toLowerCase().startsWith('ar');

          var htmlEl            = document.documentElement;
          var linkDefault       = document.getElementById('style-default');
          var linkUserDefault   = document.getElementById('user-style-default');
          var linkRTL           = document.getElementById('style-rtl');
          var linkUserRTL       = document.getElementById('user-style-rtl');

          if (isRTL) {
            linkDefault.disabled     = true;
            linkUserDefault.disabled = true;
            linkRTL.disabled         = false;
            linkUserRTL.disabled     = false;
            htmlEl.setAttribute('dir', 'rtl');
          } else {
            linkRTL.disabled         = true;
            linkUserRTL.disabled     = true;
            linkDefault.disabled     = false;
            linkUserDefault.disabled = false;
            htmlEl.setAttribute('dir', 'ltr');
          }

          var btn = document.getElementById('dropdownMenuButton');
          if (btn) {
            btn.textContent = isRTL ? 'العربية' : 'English';
          }
        })();
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/alpinejs" defer></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
