<style>
    .header {
        padding: 0.75rem 0;
    }

        .header .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 1rem;
        }

    .header-content {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
    }

    .logo a {
        font-size: 1.5rem;
        font-weight: bold;
        text-decoration: none;
    }

    .desktop-nav ul {
        display: flex;
        gap: 1.5rem;
        list-style: none;
        margin: 0;
        padding: 0;
    }

    .desktop-nav a {
        text-decoration: none;
        font-weight: 500;
        transition: color 0.2s;
    }

        .desktop-nav a:hover {
        }

    .header-actions {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .btn {
        padding: 0.5rem 1rem;
        font-size: 0.95rem;
        border-radius: 6px;
        border: none;
        cursor: pointer;
        transition: background-color 0.2s;
    }

    .btn-outline {
        background-color: transparent;
    }

        .btn-outline:hover {
        }

    .btn-primary {
        border: none;
    }

        .btn-primary:hover {
        }

    .theme-toggle {
        background: none;
        border: none;
        font-size: 1.2rem;
        cursor: pointer;
    }

        .theme-toggle:hover {
        }

    .language-dropdown {
        position: relative;
        display: inline-block;
    }

        .language-dropdown .dropdown-list {
            display: none;
            position: absolute;
            right: 0;
            background-color: white;
            border: 1px solid #ddd;
            border-radius: 6px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            list-style: none;
            padding: 0;
            margin: 0;
            min-width: 120px;
            z-index: 100;
        }

            .language-dropdown .dropdown-list li a {
                display: block;
                padding: 10px 15px;
                text-decoration: none;
                color: #333;
                transition: background 0.2s;
            }

                .language-dropdown .dropdown-list li a:hover {
                    background-color: #f5f5f5;
                }

        .language-dropdown.active .dropdown-list {
            display: block;
        }

</style>
<header class="header">
    <div class="container">
        <div class="header-content">
            <div class="logo">
                <a href="index.html">
                    <span class="logo-text">TableTap</span>
                </a>
            </div>

            <nav class="desktop-nav">
                <ul>
                    <li><a href="pricing.html">Pricing</a></li>
                    <li><a href="cities.html">Cities</a></li>
                    <li><a href="faq.html">FAQ</a></li>
                    <li><a href="contact.html">Contact</a></li>
                </ul>
            </nav>

            <div class="header-actions">
                <div class="language-dropdown" id="languageDropdownWrapper">
                    <button class="btn btn-outline" id="languageToggle">
                        @(CultureInfo.CurrentUICulture.Name.StartsWith("ar") ? "العربية" : "English")
                    </button>
                    <ul class="dropdown-list" id="languageList">
                        <li>
                            <a asp-controller="Language" asp-action="ChangeLanguage" asp-route-lang="en">
                                English
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Language" asp-action="ChangeLanguage" asp-route-lang="ar">
                                العربية
                            </a>
                        </li>
                    </ul>
                </div>

                <button class="theme-toggle" aria-label="Toggle theme">
                    <i class="fas fa-sun light-icon"></i>
                    <i class="fas fa-moon dark-icon"></i>
                </button>

                <div class="header-actions d-flex align-items-center gap-3">
                    @if (User.Identity.IsAuthenticated)
                    {
                        @if (User.IsInRole("Admin"))
                        {
                            <a href="/Admin/Dashboard" class="btn btn-primary">Admin Dashboard</a>
                        }
                        else
                        {
                            <a href="/User/Dashboard" class="btn btn-primary">User Dashboard</a>
                        }
                    }
                    else
                    {
                        <a href="login.html" class="btn btn-outline">Log in</a>
                        <a href="signup.html" class="btn btn-primary">Sign up</a>
                    }
                </div>

            </div>

            <button class="mobile-menu-button" aria-label="Toggle Menu">
                <i class="fas fa-bars"></i>
            </button>
        </div>

        <div class="mobile-menu">
            <nav>
                <ul>
                    <li><a href="pricing.html">Pricing</a></li>
                    <li><a href="cities.html">Cities</a></li>
                    <li><a href="faq.html">FAQ</a></li>
                    <li><a href="contact.html">Contact</a></li>
                </ul>
                <div class="mobile-actions">
                    <a href="login.html" class="btn btn-outline btn-full">Log in</a>
                    <a href="signup.html" class="btn btn-primary btn-full">Sign up</a>
                </div>
            </nav>
        </div>
    </div>
</header>

<script>
    const langToggle = document.getElementById("languageToggle");
    const langWrapper = document.getElementById("languageDropdownWrapper");

    langToggle.addEventListener("click", function (e) {
        e.stopPropagation();
        langWrapper.classList.toggle("active");
    });

    document.addEventListener("click", function (e) {
        if (!langWrapper.contains(e.target)) {
            langWrapper.classList.remove("active");
        }
    });
</script>